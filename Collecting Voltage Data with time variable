int readPin = A0;
int readVal;
float Capacitor_Voltage = 0;
int delayTime = 500;
int timeval = 0;

void setup() {
  Serial.begin(9600);
  pinMode(readPin, INPUT);
}

void loop() {
  readVal = analogRead(readPin);
  Capacitor_Voltage = float((5.0/1023.0)*readVal);
  timeval++;
  float time = (timeval)/2.0;
  Serial.print(time);
  Serial.println(Capacitor_Voltage);
  delay(delayTime);
}
